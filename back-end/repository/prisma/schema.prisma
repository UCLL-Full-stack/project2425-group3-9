generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  password    String
  admin       Boolean
  profile     Profile?
  address     Address?
  workspace   Workspace?
  wage        Wage?
  animals     Animal[]
}

model Profile {
  email       String  @unique
  firstname   String
  lastname    String
  age         Int
  phonenumber String
  userId      Int    @unique
  user        User   @relation(fields: [userId], references: [id])
}

model Address {
  street      String
  city        String
  state       String
  postalcode  Int
  country     String
  userId      Int     @unique
  user        User?   @relation(fields: [userId], references: [id])
}

model Workspace {
  name        String
  userId      Int     @unique
  user        User?   @relation(fields: [userId], references: [id])
}

model Wage {
  total       Float
  amount      Float
  seniority   Int
  bonus       Float
  userId      Int     @unique
  user        User?   @relation(fields: [userId], references: [id])
}

model Animal {
  firstname String
  lastname  String
  age       Int
  userId      Int    @unique
  user        User   @relation(fields: [userId], references: [id])
}